<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
</head>
<body>
    <h1>Search Results</h1>

    {{#if searchResults.length}}
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Roll Number</th>
                    <th>Class</th>
                    <th>Parent Contact</th>
                     <th>View</th>
                </tr>
            </thead>
            <tbody>
                {{#each searchResults}}
                <tr>
                    <td>{{this.student_id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.roll_number}}</td>
                    <td>{{this.class}}</td>
                    <td>{{this.parent_contact}}</td>
                    <td>
                        <a href="/student/{{this.student_id}}" class="btn btn-primary">View</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <h2>No matching students found.</h2>
    {{/if}}

    <a href="/pp" class="btn btn-secondary">Back to Student List</a>
</body>
</html>
