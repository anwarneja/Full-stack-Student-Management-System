<div class="container mt-5">
  <h2 class="mb-4 text-center">Record Attendance</h2>
  <div class="form-container">
    <form action="/attendance/add" method="POST" class="p-4 shadow-lg">
      <div class="mb-3">
        <label for="student_id" class="form-label">Student</label>
        <select name="student_id" id="student_id" class="form-select">
          {{#each students}}
            <option value="{{this.student_id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="mb-3">
        <label for="attendance_date" class="form-label">Date</label>
        <input type="date" name="attendance_date" id="attendance_date" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Status</label><br>
        <input type="radio" name="status" value="Present" checked> Present
        <input type="radio" name="status" value="Absent"> Absent
      </div>

      <button type="submit" class="btn btn-success w-100">Submit</button>
    </form>
  </div>
</div>

