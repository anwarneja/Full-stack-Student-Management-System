<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  <style>
    /* Global Styles */
    body {
      background: #f4f7f6;
      font-family: 'Poppins', sans-serif;
    }

    /* Navbar */
   .navbar {
    background: linear-gradient(45deg, #021B79, #0A1931, #185ADB) !important;
    border-bottom: 2px solid rgba(255, 255, 255, 0.1); /* Soft border */
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.2); /* Elegant shadow */
}


    .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      color: white !important;
    }

    /* Table Container */
    .table-container {
      width: 95%;
      margin: auto;
      margin-top: 10px;
      padding: 15px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    /* Table Styling */
    .table {
      text-align: center;
      font-size: 1rem;
      border-radius: 8px;
      overflow: hidden;
    }

    .table thead {
      background: linear-gradient(45deg, #FFD700, #32CD32); /* Gold & Green */
      color: white;
      font-weight: bold;
    }

    .table tbody tr:nth-child(odd) {
      background-color: #FFFACD; /* Light yellow */
    }

    .table tbody tr:nth-child(even) {
      background-color: #E0FFD1; /* Light green */
    }

    .table tbody tr:hover {
      background-color: #C0FFC0 !important; /* Light green on hover */
      transition: background 0.3s ease-in-out;
    }

    /* Buttons */
    .btn-info {
      background: linear-gradient(45deg, #17A2B8, #138496);
      color: white;
      border: none;
    }

    .btn-warning {
      background: linear-gradient(45deg, #FFC107, #E0A800);
      color: black;
      border: none;
    }

    .btn-danger {
      background: linear-gradient(45deg, #FF6B6B, #FF4B4B);
      color: white;
      border: none;
    }

    .btn-success {
      background: linear-gradient(45deg, #28A745, #218838);
      color: white;
      border: none;
    }

    .btn:hover {
      opacity: 0.9;
      transform: scale(1.05);
      transition: all 0.3s ease-in-out;
    }

    /* Responsive Fix */
    @media (max-width: 767px) {
      .table-container {
        width: 100%;
        padding: 10px;
      }

      .table th, .table td {
        font-size: 0.8rem;
        padding: 0.5rem;
      }

      .btn-small {
        font-size: 0.8rem;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Student Management</a>
      {{#if isAdmin}}
        <a href="/addstudent" class="btn btn-success ms-auto">+ Add New Student</a>
      {{/if}}
    </div>
  </nav>

  <!-- Student Table -->
  <div class="table-container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Roll Number/ID</th>
          <th>Class</th>
          <th>Parent Contact</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each students}}
        <tr>
          <td>{{this.student_id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.roll_number}}</td>
          <td>{{this.class}}</td>
          <td>{{this.parent_contact}}</td>
          <td>
            <a href="/student/{{this.student_id}}" class="btn btn-info btn-small"><i class="bi bi-eye"></i> View</a>

            {{#if ../isAdmin}}
              <a href="/edit-student/{{this.student_id}}" class="btn btn-warning btn-small"><i class="bi bi-pencil"></i> Edit</a>
              <a href="/delete-student/{{this.student_id}}" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i> Delete</a>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</body>
</html>
