<!-- views/edit-student.hbs -->
<div class="container mt-custom">
  <h1 class="text-center mb-4 animate-title">Edit Student</h1>
  <div class="card shadow-lg p-4 animate-card">
    <form action="/edit-student/{{student.student_id}}" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Student Name</label>
        <input type="text" class="form-control form-control-custom" id="name" name="name" value="{{student.name}}" required>
      </div>
      <div class="mb-3">
        <label for="roll_number" class="form-label">Roll Number</label>
        <input type="text" class="form-control form-control-custom" id="roll_number" name="roll_number" value="{{student.roll_number}}" required>
      </div>
      <div class="mb-3">
        <label for="class" class="form-label">Class</label>
        <input type="text" class="form-control form-control-custom" id="class" name="clss" value="{{student.class}}" required>
      </div>
      <div class="mb-4">
        <label for="parent_contact" class="form-label">Parent Contact</label>
        <input type="text" class="form-control form-control-custom" id="parent_contact" name="parent_contact" value="{{student.parent_contact}}" required>
      </div>
      <button type="submit" class="btn btn-primary w-100 btn-custom">Update Student</button>
    </form>
  </div>
</div>

