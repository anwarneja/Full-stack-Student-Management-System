<!-- views/admin_dashboard.hbs -->
<nav class="navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Admin Dashboard</a>
    <a href="/create_user" class="btn btn-success ms-auto">+ Create New User</a>
  </div>
</nav>

<div class="container mt-4">
  <div class="table-container">
    <h3 class="text-center mb-3">Manage Users</h3>
    <div class="table-responsive">
      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{this.user_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
              <form action="/delete_user/{{this.user_id}}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="bi bi-person-x"></i> Delete
                </button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

