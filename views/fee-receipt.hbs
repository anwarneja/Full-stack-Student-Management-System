<!-- views/fee-receipt.hbs -->
<div class="container mt-5">
  <div class="card shadow-lg text-center" id="receipt">
    <h1>Fee Receipt</h1>
    <p class="text-muted">Here are the details of your fee payment.</p>
    
    <div class="alert alert-info">
      <strong>Student Name:</strong> {{fee.student_name}} <br>
      <strong>Roll Number:</strong> {{fee.roll_number}} <br>
      <strong>Fee Amount:</strong> {{fee.fee_amount}} <br>
      <strong>Status:</strong> {{fee.status}} <br>
      <strong>Paid Date:</strong> {{fee.paid_date}}
    </div>

    <button id="printBtn" class="btn btn-success w-100 mb-2">Print Receipt</button>
    <a href="/fees" class="btn btn-secondary w-100">Back to Fees List</a>
  </div>
</div>

<style>
  .card {
    max-width: 500px;
    margin: 0 auto;
    padding: 30px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  h1 {
    color: #28a745;
    font-size: 2rem;
    font-weight: 600;
  }

  .text-muted {
    font-size: 1.1rem;
  }

  .alert-info {
    font-size: 1.1rem;
    background-color: #d1ecf1;
    border-color: #bee5eb;
  }

  .alert-info strong {
    color: #0c5460;
  }

  .btn-success {
    background-color: #28a745;
    color: white;
    padding: 12px;
    font-size: 1.2rem;
    border: none;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
    padding: 12px;
    font-size: 1.2rem;
    border: none;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  /* Responsive Fixes */
  @media (max-width: 767px) {
    .card {
      max-width: 100%; /* Full width on mobile */
      padding: 15px; /* Smaller padding */
    }

    h1 {
      font-size: 1.5rem; /* Smaller title */
    }

    .text-muted, .alert-info {
      font-size: 0.9rem; /* Smaller text */
    }

    .btn-success, .btn-secondary {
      padding: 10px; /* Smaller buttons */
      font-size: 1rem;
    }
  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
<script>
  document.getElementById("printBtn").addEventListener("click", function() {
    const content = document.getElementById('receipt');
    html2pdf()
      .from(content)
      .save('FEE-RECEIPT.pdf');
  });
</script>