<!-- views/emailsent.hbs -->
<div class="container mt-5">
  <div class="card shadow-lg p-4 text-center mx-auto" id="email-sent">
    <h3 class="text-success">Success!</h3>
    <p class="text-muted">Your email has been sent successfully.</p>
    
    <div class="alert alert-success">
      <strong>Recipient:</strong>
      <ul class="list-unstyled">
        {{#each email}}
          <li>✔ {{this}}</li>
        {{/each}}
      </ul>
      <strong>Subject:</strong> {{subject}}
    </div>

    <a href="/fees" class="btn btn-primary w-100">Back to Fees</a>
  </div>
</div>

<style>
  .card {
    max-width: 400px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 600;
  }

  .text-muted {
    font-size: 1rem;
  }

  .alert-success {
    font-size: 1rem;
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
  }

  .alert-success strong {
    color: #155724;
  }

  .btn-primary {
    background-color: #007bff;
    border: none;
    padding: 12px;
    font-size: 1.1rem;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  /* Responsive Fixes */
  @media (max-width: 767px) {
    .card {
      max-width: 100%; /* Full width on mobile */
      padding: 15px; /* Smaller padding */
    }

    h3 {
      font-size: 1.5rem; /* Smaller title */
    }

    .text-muted, .alert-success {
      font-size: 0.9rem; /* Smaller text */
    }

    .btn-primary {
      padding: 10px; /* Smaller button */
      font-size: 0.9rem;
    }
  }
</style>