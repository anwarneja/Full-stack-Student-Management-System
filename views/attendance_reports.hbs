
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Reports</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            background: #f8f9fa;
        }
        .card {
            border-radius: 12px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
        .btn-custom {
            background: linear-gradient(45deg, #FFC107, #32CD32);
            color: white;
            border: none;
        }
        .btn-custom:hover {
            background: linear-gradient(45deg, #FFA000, #28A745);
            color: white;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="card p-4">
            <h2 class="text-center text-primary mb-4">
                <i class="bi bi-clipboard-check"></i> Attendance Reports
            </h2>
            
            <!-- Date Filter Form -->
            <form method="GET" action="/attendance/reports" class="mb-4 row g-3 align-items-center">
                <div class="col-md-4">
                    <label class="form-label">Start Date:</label>
                    <input type="date" name="startDate" class="form-control" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date:</label>
                    <input type="date" name="endDate" class="form-control" required>
                </div>
                <div class="col-md-4 text-end">
                    <button type="submit" class="btn btn-custom w-100">
                        <i class="bi bi-bar-chart"></i> Generate Report
                    </button>
                </div>
            </form>
            
            <!-- Attendance Report Table -->
            {{#if results.length}}
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Student Name</th>
                            <th>Present Days</th>
                            <th>Absent Days</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each results}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td class="text-success fw-bold">{{this.present_days}}</td>
                            <td class="text-danger fw-bold">{{this.absent_days}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="alert alert-warning text-center" role="alert">
                <i class="bi bi-exclamation-circle"></i> No records found for the selected date range.
            </div>
            {{/if}}
            
            <!-- Download Button -->
            <div class="text-center mt-4">
                <button onclick="downloadPDF()" class="btn btn-custom btn-lg">
                    <i class="bi bi-download"></i> Download PDF
                </button>
            </div>
        </div>
    </div>
    
    <script>
        function downloadPDF() {
            const element = document.querySelector('.card');
            html2pdf()
                .from(element)
                .save('Attendance_Report.pdf');
        }
    </script>
    

</body>
</html>
