<!-- views/fees.hbs -->
<div class="container mt-4">
  <h2 class="text-center mb-4">Fee Records</h2>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>#</th>
          <th>Student Name</th>
          <th>Amount</th>
          <th>Paid Date</th>
          <th>Status</th>
          <th class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each fees}}
        <tr>
          <td>{{this.fee_id}}</td>
          <td>{{this.student_name}}</td>
          <td>{{this.fee_amount}}</td>
          <td>{{this.paid_date}}</td>
          <td>{{this.status}}</td>
          <td class="text-end">
            <a href="/receipt/{{this.fee_id}}" class="btn btn-info btn-sm">View Receipt</a>
            {{#if ../isAdmin}}
              <a href="/edit-fee/{{this.fee_id}}" class="btn btn-primary btn-sm">Edit</a>
              <a href="/confirm-delete/{{this.fee_id}}" class="btn btn-danger btn-sm">Delete</a>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#if ./isAdmin}}
  <div class="d-flex justify-content-between mt-3 flex-wrap">
    <a href="/add-fee" class="btn btn-success mb-2">Add New Fee</a>
    <a href="/notify-due-fees" class="btn btn-warning mb-2">Send Reminder</a>
  </div>
  {{/if}}
</div>

<style>
