<!-- views/attendance.hbs -->
<div class="container my-5">
  <h3 class="text-center mb-4">Attendance Management</h3>

  <!-- Attendance Table -->
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Roll Number</th>
          <th>Class</th>
          <th>Date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each attendance}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.roll_number}}</td>
          <td>{{this.class}}</td>
          <td>{{this.date}}</td>
          <td>{{this.status}}</td>
          <td>
            {{#if ../isAdmin}}
              <form action="/attendance/delete/{{this.attendance_id}}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{#if ./isAdmin}}
    <div class="d-flex justify-content-between flex-wrap gap-2 mt-4">
      <a href="/attendance/add" class="btn btn-primary">Add Attendance</a>
      <a href="/notify-absentees" class="btn btn-warning">Send Absenteeism Reminder</a>
    </div>
  {{/if}}

  <div class="mt-3">
    <a href="/attendance/reports" class="btn btn-success">ðŸ“Š View Attendance Reports</a>
  </div>
</div>

<style>
  /* Responsive Fixes */
  @media (max-width: 767px) {
    .container {
      padding: 10px; /* Smaller padding */
      margin: 2rem auto; /* Reduce margin */
    }

    h3 {
      font-size: 1.5rem; /* Smaller title */
    }

    .table {
      font-size: 0.9rem; /* Smaller text */
    }

    .btn-sm {
      padding: 5px 10px; /* Smaller delete button */
      font-size: 0.8rem;
    }

    .btn-primary, .btn-warning, .btn-success {
      padding: 8px 12px; /* Smaller buttons */
      font-size: 0.9rem;
      width: 100%; /* Full width on mobile */
    }

    .d-flex {
      flex-direction: column; /* Stack buttons vertically */
      gap: 10px; /* Space between */
    }
  }
</style>