<!-- views/attendance.hbs -->
<div class="container my-5">
  <h3 class="text-center mb-4">Attendance Management</h3>
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Roll Number</th>
          <th>Class</th>
          <th>Date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each attendance}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.roll_number}}</td>
          <td>{{this.class}}</td>
          <td>{{this.date}}</td>
          <td>{{this.status}}</td>
          <td>
            {{#if ../isAdmin}}
              <form action="/attendance/delete/{{this.attendance_id}}" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#if ./isAdmin}}
    <div class="d-flex justify-content-between flex-wrap gap-2 mt-4">
      <a href="/attendance/add" class="btn btn-primary">Add Attendance</a>
      <a href="/notify-absentees" class="btn btn-warning">Send Absenteeism Reminder</a>
    </div>
  {{/if}}
  <div class="mt-3">
    <a href="/attendance/reports" class="btn btn-success">ðŸ“Š View Attendance Reports</a>
  </div>
</div>
<style>
  @media (max-width: 767px) {
    .container { padding: 10px; margin: 2rem auto; }
    h3 { font-size: 1.5rem; }
    .table { font-size: 0.9rem; }
    .btn-sm { padding: 5px 10px; font-size: 0.8rem; }
    .btn-primary, .btn-warning, .btn-success { padding: 8px 12px; font-size: 0.9rem; width: 100%; }
    .d-flex { flex-direction: column; gap: 10px; }
  }
</style>